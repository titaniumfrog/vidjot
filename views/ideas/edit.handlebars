<div class="card card-body">
  <h3>Edit Player Stats</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">

      <div>
          <div class="form-group">
              <label for="title">Player Name</label>
              <input type="text" class="form-control" name="title" value="{{idea.title}}" required>
          </div>
      </div>

      <div class="form-group">
          <label for="gamedate">Game Date</label>
          <input type="date" class="form-control" name="gamedate" value="{{idea.gamedate}}" required>
      </div>

      <div class="form-group">
          <label for="team">Team QB</label>
          <input type="text" class="form-control" name="team" value="{{idea.team}}" required>
      </div><hr>
      <h4>OFFENSIVE STATS</h4>
      <div class="form-group">
          <label for="receptions">Receptions</label>
          <input type="number" class="form-control" name="receptions" id="receptions" value="{{idea.receptions}}" required>
      </div>
      <div class="form-group">
          <label for="drops">Dropped Passes</label>
          <input type="number" class="form-control" name="drops" id="drops" value="{{idea.drops}}" required>
      </div>
      <div class="form-group">
          <label for="tds">Touch Downs</label>
          <input type="number" class="form-control" name="tds" id="tds" value="{{idea.tds}}" required>
      </div>
      <div class="form-group">
          <label for="extrapt">Extra Points</label>
          <input type="number" class="form-control" name="extrapt" id="extrapt" value="{{idea.extrapt}}" required>
      </div>
      <div class="form-group">
          <label for="yards">Total Yards - Including yards after catch</label>
          <input type="number" class="form-control" name="yards" id="yards" value="{{idea.yards}}" required>
      </div><hr>
      <h4>DEFFENSIVE STATS</h4>
      <div class="form-group">
          <label for="tackles">Tackles</label>
          <input type="number" class="form-control" name="tackles" id="tackles" value="{{idea.tackles}}" required>
      </div>
      <div class="form-group">
          <label for="ints">Interceptions</label>
          <input type="number" class="form-control" name="ints" id="ints" value="{{idea.ints}}" required>
      </div>
      <div class="form-group">
          <label for="sacks">Sacks</label>
          <input type="number" class="form-control" name="sacks" id="sacks" value="{{idea.sacks}}" required>
      </div>
      <h4>Other</h4>
      <div class="form-group">
          <label for="details">Not Listed</label>
          <textarea class="form-control" name="details" value="{{idea.details}}" required></textarea>
      </div><hr>
      <div class="form-group">
          <label for="win">Games Won</label>
          <input type="number" class="form-control" name="win" id="win" value="{{idea.win}}" required>
      </div>
      <div class="form-group">
          <label for="lose">Games Lost</label>
          <input type="number" class="form-control" name="lose" id="lose" value="{{idea.lose}}" required>
      </div>

        </form>
    </div>
            <div>
            <button type="submit" class="btn btn-primary" id="btn-view">Submit</button>
            </div>


